# =============================================================================
# NASA SPACE BIOLOGY AI - CENTRALIZED CONFIGURATION
# =============================================================================
# Copy this file to .env and configure your settings
# cp env.example .env

# =============================================================================
# AI MODULE CONFIGURATION
# =============================================================================

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Gemini API Configuration (REQUIRED for Data API)
GEMINI_API_KEY=your_gemini_api_key_here

# Processing Configuration
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY=1.0
CHUNK_SIZE=1000

# Data Paths
DATA_DIR=ai/data
OUTPUT_DIR=ai/output
CACHE_DIR=ai/cache

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# AI Backend API Configuration
AI_API_HOST=0.0.0.0
AI_API_PORT=8080
AI_API_V1_STR=/api/v1

# Data Backend API Configuration
DATA_API_HOST=0.0.0.0
DATA_API_PORT=8081
DATA_API_V1_STR=/api/v1

# CORS Configuration (add your remote domains here)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,https://bionabu.web.app,https://bionabu.firebaseapp.com,*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# AI Backend API Connection (DEPLOYED URLs)
VITE_APP_AI_API_BASE_URL=https://bionabu-ai-backend-spelnuireq-uc.a.run.app
VITE_APP_AI_API_VERSION=v1

# Data Backend API Connection (DEPLOYED URLs)
VITE_APP_DATA_API_BASE_URL=https://bionabu-data-backend-spelnuireq-uc.a.run.app
VITE_APP_DATA_API_VERSION=v1

# Development Configuration
VITE_APP_ENVIRONMENT=production
VITE_APP_DEBUG=false

# Feature Flags
VITE_APP_ENABLE_ANALYTICS=false
VITE_APP_ENABLE_LOGGING=true
VITE_APP_ENABLE_CHAT_HISTORY=true

# UI Configuration
VITE_APP_MAX_RECOMMENDATIONS=10
VITE_APP_MAX_SUGGESTED_QUESTIONS=8
VITE_APP_TYPING_INDICATOR_DELAY=1000
