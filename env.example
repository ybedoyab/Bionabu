# =============================================================================
# NASA SPACE BIOLOGY AI - CENTRALIZED CONFIGURATION
# =============================================================================
# Copy this file to .env and configure your settings
# cp env.example .env

# =============================================================================
# AI MODULE CONFIGURATION
# =============================================================================

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Processing Configuration
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY=1.0
CHUNK_SIZE=1000

# Data Paths
DATA_DIR=ai/data
OUTPUT_DIR=ai/output
CACHE_DIR=ai/cache

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_V1_STR=/api/v1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Backend API Connection (REQUIRED)
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_API_VERSION=v1

# Development Configuration
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_LOGGING=true
REACT_APP_ENABLE_CHAT_HISTORY=true

# UI Configuration
REACT_APP_MAX_RECOMMENDATIONS=10
REACT_APP_MAX_SUGGESTED_QUESTIONS=8
REACT_APP_TYPING_INDICATOR_DELAY=1000
